    transition: all 0.3s ease;
    display: flex;
    flex-direction: column;
    align-items: center;
  }

  .mobile-menu.active {
    top: 0;
  }

  .mobile-link {
    color: white;
    text-decoration: none;
    font-size: 1.2rem;
    padding: 1rem;
    text-align: center;
    width: 100%;
    transition: all 0.3s ease;
  }

  .mobile-link:hover {
    background: rgba(255, 255, 255, 0.1);
  }

  .mobile-link.active {
    background: rgba(255, 255, 255, 0.1);
    font-weight: 600;
  }

  @media (max-width: 768px) {
    .nav-links {
      display: none;
    }

    .mobile-menu-btn {
      display: block;
    }
  }

  /* Hero Section */
