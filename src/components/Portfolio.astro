  }

  .social-links {
    margin: 1.5rem 0;
    animation: slideUp 1.2s ease 0.6s forwards;
    opacity: 0;
    transform: translateY(30px);
  }

  .hero-buttons {
    margin-top: 2rem;
    animation: slideUp 1.2s ease 0.9s forwards;
    opacity: 0;
    transform: translateY(30px);
  }

  .btn-outline {
    background: transparent;
    border: 2px solid white;
    margin-left: 1rem;
  }

  .btn-outline:hover {
    background: rgba(255, 255, 255, 0.1);
  }

  .social-link {
    display: inline-block;
    margin: 0 0.5rem;
    color: white;
    text-decoration: none;
    font-weight: 500;
    padding: 0.5rem 1rem;
    border-radius: 30px;
    border: 1px solid rgba(255, 255, 255, 0.3);
    transition: all 0.3s ease;
  }

  .social-link:hover {
    background: rgba(255, 255, 255, 0.1);
