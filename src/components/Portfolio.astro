  }

  .education-date {
    font-size: 0.9rem;
    margin-top: 0.5rem;
    opacity: 0.8;
  }

  .certificates {
    background: rgba(255, 255, 255, 0.1);
    padding: 2rem;
    border-radius: 12px;
  }

  .certificate-list {
    margin-top: 1rem;
