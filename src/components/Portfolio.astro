    text-align: center;
    color: white;
    z-index: 2;
    padding: 0 20px;
    animation: fadeIn 1.5s ease;
  }

  .hero-text h1 {
    font-size: 3.5rem;
    margin-bottom: 1rem;
    text-shadow: 0 2px 10px rgba(0, 0, 0, 0.3);
    animation: slideUp 1.2s ease forwards;
    opacity: 0;
    transform: translateY(30px);
  }

  .hero-text h2 {
    font-size: 1.8rem;
    font-weight: 400;
    margin-bottom: 2rem;
    text-shadow: 0 2px 8px rgba(0, 0, 0, 0.3);
