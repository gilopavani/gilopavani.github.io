  /* Parallax Sections */
  .parallax-section {
    position: relative;
    overflow: hidden;
    background-attachment: fixed;
    background-position: center;
    background-repeat: no-repeat;
    background-size: cover;
  }

  .about {
    background-image: linear-gradient(to right, rgba(50, 69, 255, 0.8), rgba(188, 82, 238, 0.8)), var(--pattern1);
  }

  .experience {
    background-image: linear-gradient(to right, rgba(25, 34, 127, 0.8), rgba(94, 41, 119, 0.8)), var(--pattern2);
  }

  .education {
    background-image: linear-gradient(to right, rgba(50, 69, 255, 0.8), rgba(188, 82, 238, 0.8)), var(--pattern3);
  }

  .skills {
    background-image: linear-gradient(to right, rgba(25, 34, 127, 0.8), rgba(94, 41, 119, 0.8)), var(--pattern4);
  }

  .parallax-content {
    position: relative;
    z-index: 2;
    color: white;
  }

  /* About Section */
  .about-content {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 2rem;
    margin-top: 2rem;
    justify-content: center;
  }

  .about-text p {
    font-size: 1.1rem;
    line-height: 1.8;
  }

  .about-info {
    display: grid;
    grid-template-columns: 1fr;
    gap: 1.5rem;
  }

  .info-item {
    background: rgba(255, 255, 255, 0.1);
    padding: 1rem;
    border-radius: 8px;
  }

  .info-item h3 {
    font-size: 1.2rem;
    margin-bottom: 0.5rem;
  }

  /* Experience Section */
  .timeline {
    position: relative;
    max-width: 1200px;
    margin: 0 auto;
  }

  .timeline::after {
    content: '';
    position: absolute;
    width: 6px;
    background: rgba(255, 255, 255, 0.2);
    top: 0;
    bottom: 0;
    left: 50%;
    margin-left: -3px;
  }

  .timeline-item {
    padding: 10px 40px;
    position: relative;
    width: 50%;
    left: 0;
    margin-bottom: 2rem;
  }

  .timeline-item:nth-child(even) {
    left: 50%;
  }

  .timeline-badge {
    position: absolute;
    top: -15px;
    left: -14px;
    z-index: 1;
  }

  .timeline-item:nth-child(odd) .timeline-badge {
    right: -14px;
    left: auto;
  }

  .timeline-badge span {
    display: inline-block;
    padding: 0.5rem 1rem;
    background: rgba(255, 255, 255, 0.2);
    color: white;
    border-radius: 20px;
    font-weight: 600;
  }

  .timeline-content {
    padding: 1.5rem;
    background: rgba(255, 255, 255, 0.1);
    color: white;
    border-radius: 12px;
  }

  .timeline-date {
    font-size: 0.9rem;
    margin-bottom: 1rem;
    opacity: 0.8;
  }

  .project-list {
    margin-top: 1.5rem;
  }

  .project-item {
    margin-bottom: 1.5rem;
    padding-bottom: 1.5rem;
    border-bottom: 1px solid rgba(255, 255, 255, 0.1);
